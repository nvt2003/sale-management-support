@model Objects.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Category ID</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>

        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Category Description</dt>
        <dd class="col-sm-10">@Model.CategoryDescription</dd>
    </dl>
    <div>
        @if (ViewBag.Message != null)
        {
            @ViewBag.Message
        }
    </div>
</div>

<a asp-action="Index">Back to List</a>
