@model Objects.Models.Product

<h2>Product Details</h2>

<div>
    <strong>Product Code:</strong> @Model.ProductCode
</div>
<div>
    <strong>Product Name:</strong> @Model.ProductName
</div>
<div>
    <strong>Product Description:</strong> @Model.ProductDescription
</div>
<div>
    <strong>Price:</strong> @Model.Price.ToString("C")
</div>
<div>
    <strong>Category:</strong> @Model.Category?.CategoryName
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
<a href="@Url.Action("Edit", new { productCode = Model.ProductCode })" class="btn btn-warning">Edit</a>
