@model List<Objects.Models.Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td>@product.Category?.CategoryName</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Detail" asp-route-productCode="@product.ProductCode" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-productCode="@product.ProductCode" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-productCode="@product.ProductCode" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Product</a>
