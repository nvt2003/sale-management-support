@model IEnumerable<Objects.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.ID</td>
                <td>@customer.CustomerName</td>
                <td>@customer.Email</td>
                <td>
                    <a href="@Url.Action("Details", "Customer", new { id = customer.ID })">Details</a>
                    <!-- Other action links like Edit and Delete can be added here -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "CustomerMvc")" class="btn btn-primary">Create New Customer</a>
