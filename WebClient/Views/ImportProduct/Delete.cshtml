@model Objects.DTOs.ImportProductDTO

@{
    ViewData["Title"] = "Delete Import Product";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the product with ID @Model.Id?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Type of Quantity</dt>
        <dd class="col-sm-10">@Model.TypeOfQuantity</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice</dd>

        <dt class="col-sm-2">Import Date</dt>
        <dd class="col-sm-10">@Model.ImportDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Expired Date</dt>
        <dd class="col-sm-10">@Model.ExpiredDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
